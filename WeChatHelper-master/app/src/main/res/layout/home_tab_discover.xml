<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp"
    android:orientation="vertical"
    android:background="@color/background_page"
    tools:ignore="ResourceName">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:background="@drawable/wuge_banner"
        android:paddingBottom="5dp"
        android:orientation="horizontal">
        <net.lucode.hackware.magicindicator.MagicIndicator
            android:id="@+id/discover_indicator"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="50dp" />
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:onClick="homeOnClick"
            android:layout_gravity="center"
            tools:ignore="RelativeOverlap">
            <TextView
                android:id="@+id/discover_issue_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="13.5dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="30dp"
                android:paddingLeft="13.5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:onClick="homeOnClick"
                android:background="@drawable/discover_issue"
                android:text="@string/discover_issue"
                android:layout_gravity="center"
                android:textColor="@color/white"
                tools:ignore="RelativeOverlap">
            </TextView>
        </RelativeLayout>
    </LinearLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/discover_viewpager"
        android:layout_width="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@color/background_page"
        android:layout_height="wrap_content"
        />

</LinearLayout>

