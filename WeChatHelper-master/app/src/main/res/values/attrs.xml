<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--corner_color 边角颜色，
        scanner_color 扫描线颜色
        possible_result_color 扫描点颜色
        frame_color 扫描框边线颜色
        mask_color 模糊区域颜色
        label_text  框上方提示
    -->
    <declare-styleable name="ViewfinderView">
        <attr name="corner_color" format="color"/>
        <attr name="laser_color" format="color"/>
        <attr name="frame_color" format="color" />
        <attr name="mask_color" format="color" />
        <attr name="result_point_color" format="color"/>
        <attr name="result_color" format="color" />
        <attr name="label_text_color" format="color"/>
        <attr name="label_text" format="string"/>
        <attr name="label_text_size" format="float"/>
    </declare-styleable>
    <declare-styleable name="EasySwipeMenuLayout">
        <attr name="leftMenuView" format="reference" />
        <attr name="rightMenuView" format="reference" />
        <attr name="contentView" format="reference" />
        <attr name="canRightSwipe" format="boolean" />
        <attr name="canLeftSwipe" format="boolean" />
        <attr name="fraction" format="float" />
    </declare-styleable>
    <declare-styleable name="PasswordView">
        <attr name="passwordLength" format="integer" />
        <attr name="passwordPadding" format="dimension" />
        <attr name="borderColor" format="color" />
        <attr name="borderWidth" format="dimension" />
        <attr name="cursorFlashTime" format="integer" />
        <attr name="isCursorEnable" format="boolean" />
        <attr name="cipherEnable" format="boolean" />
        <attr name="cursorColor" format="color" />
        <attr name="mode" format="enum">
            <enum name="underline" value="0" />
            <enum name="rect" value="1" />
        </attr>
    </declare-styleable>
    <declare-styleable name="sl_AspectRatioTextView">
        <attr name="sl_artv_ratio_title" format="string" />
        <attr name="sl_artv_ratio_x" format="float" />
        <attr name="sl_artv_ratio_y" format="float" />
    </declare-styleable>
    <declare-styleable name="sl_CropView">

        <!--Crop image view-->
        <attr name="sl_aspect_ratio_x" format="float" />
        <attr name="sl_aspect_ratio_y" format="float" />

        <!--Overlay view-->
        <attr name="sl_show_oval_crop_frame" format="boolean" />
        <attr name="sl_circle_dimmed_layer" format="boolean" />
        <attr name="sl_dimmed_color" format="color" />

        <attr name="sl_grid_stroke_size" format="dimension" />
        <attr name="sl_grid_color" format="color" />
        <attr name="sl_grid_row_count" format="integer" />
        <attr name="sl_grid_column_count" format="integer" />
        <attr name="sl_show_grid" format="boolean" />

        <attr name="sl_frame_stroke_size" format="dimension" />
        <attr name="sl_frame_color" format="color" />
        <attr name="sl_show_frame" format="boolean" />

    </declare-styleable>
</resources>
